generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["orderByNulls", "fieldReference", "postgresqlExtensions", "clientExtensions", "extendedWhereUnique"]
  binaryTargets   = ["native"]
}

generator docs {
  provider = "node node_modules/prisma-docs-generator"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [uuid_ossp(map: "uuid-ossp")]
}

model UserFavorite {
  id            Int     @id @default(autoincrement())
  user_id       String  @db.Uuid
  favorite_id   String
  favorite_type String
  custom_label  String?
  users         User    @relation(fields: [user_id], references: [id], map: "user_favorites_users_id_fk")

  @@unique([user_id, favorite_id, favorite_type], map: "user_favorites_unique_favorite_id")
  @@map("user_favorites")
}

model User {
  id             String         @id @unique @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user_favorites UserFavorite[]

  @@map("users")
}
